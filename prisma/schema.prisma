datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id           Int      @id @default(autoincrement())
  password     String
  name         String   @unique
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id           Int            @id @default(autoincrement())
  telegramId   String         @unique
  name         String
  email        String?        @unique
  phoneNumber  String         @unique
  inGroup      Boolean        @default(false)
  status       UserStatus     @default(REGISTERED)
  role         UserRole       @default(USER)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  subscription Subscription[]
}

model Subscription {
  id                 Int         @id @default(autoincrement())
  userId             Int
  expiredDate        DateTime
  startDate          DateTime
  alertCount         Int         @default(0)
  price              Int
  paymentType        PaymentType
  status             SubscriptionStatus  @default(Created)
  subscriptionTypeId Int
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  transactionId      String?            @unique

  user             User             @relation(fields: [userId], references: [id])
  subscriptionType SubscriptionType @relation(fields: [subscriptionTypeId], references: [id])
}

model SubscriptionType {
  id               Int            @id @default(autoincrement())
  price            Int
  title            String
  description      String
  telegramTopicIds Json
  subscriptions    Subscription[]
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}

enum UserStatus {
  REGISTERED
  SUBSCRIBE
  EXPIRED
  INACTIVE
  UNSUBSCRIBE
}

enum UserRole {
  USER
  ADMIN
}

enum PaymentType {
  ATMOS
  STRIPE
}

enum SubscriptionStatus {
  Created
  Paid
  Canceled
}